.wrap-input{
  display: flex;
  padding: 16px 0;
  background: #fff;
}
.weui-input{
  flex: 1;
  padding-right: 16px;
}

.item-icon{
  width: 24px;
  height: 24px;
  padding: 16px;
}
.item-txt{
  flex: 1;
}
.item-count{
  text-align: right;
  width: 50px;
}

.todo-item{
  background:#fff;
  padding-left: 16px;
  border-bottom: 1px solid #f5f5f5;
  height: 60px;
  line-height: 60px;
  display: flex;
}
.todo-item:last-child{
  border-bottom: none;
}

.icon-input{
  width: 16px;
  height: 16px;
  position: relative;
  top: 3px;
  padding: 0 16px;
}
.icon-add{
  width: 36px;
  height: 36px;
  position: fixed;
  right: 50px;
  bottom: 70px;
}
.tool{
  display: flex;
  justify-content: space-between;
  height: 36px;
  line-height: 36px;
  padding: 0 20px;
  margin: 10px 0;
}

.item-tool{
  padding: 0 10px;
}
.add{
  background: #d81e06;
  color: #fff;
  border-radius: 6px;
}