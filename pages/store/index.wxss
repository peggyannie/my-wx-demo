.wrap-input{
  display: flex;
  height: 50px;
  line-height: 50px;
  background: #fff;
}
.weui-input{
  flex: 1;
  position: relative;
  top: 14px;
  padding-right: 16px;
}

.item-icon{
  width: 24px;
  height: 24px;
  padding: 16px;
}
.item-txt{
  flex: 1;
}
.todo-wrap{
  padding: 16px 0;
}
.todo-item{
  background:#fff;
  padding-left: 16px;
  border-bottom: 1px solid #f5f5f5;
  height: 60px;
  line-height: 60px;
  display: flex;
}
.todo-item:last-child{
  border-bottom: none;
}

.icon-input{
  width: 16px;
  height: 16px;
  position: relative;
  top: 16px;
  padding: 0 16px;
}
.icon-add{
  width: 36px;
  height: 36px;
  position: fixed;
  right: 26px;
  bottom: 26px;
}