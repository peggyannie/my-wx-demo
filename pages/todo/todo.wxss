.wrap{
  background: #f5f5f5;
  height: 100vh;
  font-size: 14px;
}
.wrap-input{
  display: flex;
  height: 50px;
  line-height: 50px;
  background: #fff;
}
.weui-input{
  flex: 1;
  position: relative;
  top: 14px;
  padding: 0 16px;
}
.add{
  padding: 0 16px;
}
.item-icon{
  width: 24px;
  height: 24px;
  padding: 8px;
}
.item-txt{
  flex: 1;
}
.todo-wrap{
  padding: 16px 0;
}
.todo-item{
  background:#fff;
  padding-left: 16px;
  border-bottom: 1px solid #f5f5f5;
  height: 40px;
  line-height: 40px;
  display: flex;
}
.todo-item:last-child{
  border-bottom: none;
}